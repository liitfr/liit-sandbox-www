#home
  & header
    & #logo-banner
      visibility: hidden

  & main
    lost-utility: clearfix

    & .part
      lost-column: 1/1 0 0
      height: 100vh
      overflow: hidden
      lost-utility: clearfix
      min-height: 360px

      /* <!> If you change height value, change staticifyHeight() values in home.js <!> */
      @media screen and (--s)
        height: 200vh

      &.first
        background: #455c7b

      &.second
        background: #da727e
        color: #fff
        font-family: 'Lato'
        font-size: 1.5em

        /* & section
          @media screen and (--reverse-threshold)
            margin: 3em 0 */

      &.third
        background: #ffaa5c

      &.fourfh
        background: #ac6c82

      & section,
      & #logo,
      & #headline
        height: 100%
        lost-column: 1/2 0 0
        lost-align: center

        @media screen and (--reverse-threshold)
          lost-row: 1/2 0 0

        @media screen and (--s)
          lost-row: 1/2 0 0

        @media screen and (--m) and (--landscape)
          lost-column: 1/2 0 0

      & #logo
        & #logo-fat
          touch-action: pan-y
          width: 40%
          height: auto

          @media screen and (--reverse-threshold)
            height: 40%
            width: auto

          @media screen and (--s)
            width: 60%
            height: auto

          & .polyanonymous
            stroke: #e9ecef
            fill: transparent
            stroke-width: 3px

          & #background
            fill: #455c7b
            stroke: #455c7b
            stroke-width: 3px
            transition: 0.5s ease-in-out

            &.draw
              stroke: #e9ecef

          & #aura
            fill: url("#transformedPattern")
            transform-origin: 200px 200px

          & .particles
            fill: #ffaa5c

          & text
            visibility: hidden

      & #headline
        text-transform: uppercase

        & div
          padding-top: 20px

          @media screen and (--s)
            padding-top: 0
            width: 75%

          @media screen and (--reverse-threshold)
            padding-top: 0
            padding-left: 30px

        & span
          display: block
          font-family: 'Open Sans', sans-serif
          background: rgba(69, 92, 123, 0.7)

        & #title
          font-size: 3.5em
          margin: 0
          line-height: 0.8em
          color: #fff
          font-weight: 800

        & #signature
          color: #ffaa5c

      & #whoami
        /* lost-align: reset */

        /* & #photo,
        & #map
          display: block
          lost-row: 1/2 0 0 */

        /* & #photo
          background-image: url('/img/portraitMHO.jpg')
          background-size: cover */

        /* & #map */

        background: #455c7b
        background-image: url('/img/map.svg')
        background-size: cover

  & #trigger-1
    top: calc(50% + 1px)

  & #trigger-2
    top: 900px

  & .fellow
    width: 200px
    height: 200px
